/* 公告中使用的 kbd 样式 */
.widget.text .content kbd {
  cursor: default;
  display: inline-block;
  padding: 3px 5px;
  font: 11px SFMono-Regular, Consolas, Liberation Mono, Menlo, monospace;
  line-height: 10px;
  vertical-align: 0.05rem;
  border: 1px solid #d1d5da;
  border-radius: 6px;
}

